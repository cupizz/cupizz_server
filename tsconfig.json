{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["esnext"],
        "esModuleInterop": true,
        "strictNullChecks": false,
        "target": "ES5",
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {
            "@cores/*": ["src/cores/*"],
        }
    },
    "include": ["src/**/*.ts", "spec/**/*.ts"],
    "exclude": ["src/public/"]
}